{
  "configurations": [
    {
      "name": "Linux",
      "includePath": [
        "${workspaceFolder}/**",
        "${workspaceFolder}/renderer/include",
        "${workspaceFolder}/engine/include",
        "${workspaceFolder}/math/include",
        "${workspaceFolder}/build/_deps/glfw-src/include",
        "/usr/include/vulkan"
      ],
      "defines": [
        "GLFW_INCLUDE_VULKAN",
        "VK_USE_PLATFORM_XLIB_KHR",
        "_DEBUG",
        "UNICODE",
        "_UNICODE"
      ],
      "compilerPath": "/usr/bin/gcc",
      "cStandard": "c17",
      "cppStandard": "c++23",
      "intelliSenseMode": "linux-gcc-x64",
      "configurationProvider": "ms-vscode.cmake-tools"
    },
    {
      "name": "Win32",
      "includePath": [
        "${workspaceFolder}/**",
        "${workspaceFolder}/renderer/include",
        "${workspaceFolder}/engine/include",
        "${workspaceFolder}/math/include", 
        "${workspaceFolder}/build/_deps/glfw-src/include",
        "${env:VULKAN_SDK}/Include"
      ],
      "defines": [
        "GLFW_INCLUDE_VULKAN",
        "VK_USE_PLATFORM_WIN32_KHR",
        "_DEBUG",
        "UNICODE", 
        "_UNICODE",
        "_WIN32_WINNT=0x0601"
      ],
      "compilerPath": "g++.exe",
      "cStandard": "c17",
      "cppStandard": "c++23", 
      "intelliSenseMode": "windows-gcc-x64",
      "configurationProvider": "ms-vscode.cmake-tools"
    }
  ],
  "version": 4
}
